{
  "designSystem": {
    "metadata": {
      "name": "DigitalFlow Design System",
      "version": "1.0",
      "description": "Modern, minimalist design system with bold typography, geometric shapes, and high contrast",
      "primaryUseCase": "SaaS subscription service for unlimited design"
    },
    
    "colorPalette": {
      "primary": {
        "black": "#000000",
        "white": "#FFFFFF",
        "lightGray": "#F5F5F5",
        "mediumGray": "#E8E8E8",
        "darkGray": "#2C2C2C"
      },
      "accent": {
        "blue": "#3B82F6",
        "lightBlue": "#60A5FA",
        "mint": "#A8E6CF",
        "yellow": "#EAB308",
        "pink": "#FFC0CB"
      },
      "text": {
        "primary": "#000000",
        "secondary": "#666666",
        "tertiary": "#999999",
        "onDark": "#FFFFFF",
        "onDarkSecondary": "#CCCCCC"
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "display": "Inter, sans-serif"
      },
      "fontWeights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "hierarchy": {
        "hero": {
          "fontSize": "clamp(48px, 6vw, 96px)",
          "fontWeight": 800,
          "lineHeight": 1.1,
          "letterSpacing": "-0.02em",
          "color": "#FFFFFF",
          "context": "Main landing page headline",
          "element": "h1"
        },
        "h2": {
          "fontSize": "clamp(32px, 4vw, 56px)",
          "fontWeight": 800,
          "lineHeight": 1.2,
          "letterSpacing": "-0.01em",
          "color": "#000000",
          "context": "Section headlines"
        },
        "h3": {
          "fontSize": "clamp(24px, 3vw, 36px)",
          "fontWeight": 700,
          "lineHeight": 1.3,
          "color": "#000000",
          "context": "Card titles, feature headers"
        },
        "body": {
          "fontSize": "18px",
          "fontWeight": 400,
          "lineHeight": 1.6,
          "color": "#666666",
          "context": "Descriptive text, paragraphs"
        },
        "bodySmall": {
          "fontSize": "16px",
          "fontWeight": 400,
          "lineHeight": 1.5,
          "color": "#666666"
        },
        "label": {
          "fontSize": "14px",
          "fontWeight": 600,
          "lineHeight": 1.4,
          "letterSpacing": "0.05em",
          "textTransform": "uppercase",
          "color": "#3B82F6",
          "context": "Category labels, badges"
        }
      }
    },

    "spacing": {
      "scale": {
        "xs": "8px",
        "sm": "16px",
        "md": "24px",
        "lg": "32px",
        "xl": "48px",
        "2xl": "64px",
        "3xl": "96px",
        "4xl": "128px"
      },
      "sections": {
        "paddingTop": "clamp(64px, 8vw, 128px)",
        "paddingBottom": "clamp(64px, 8vw, 128px)"
      }
    },

    "components": {
      "buttons": {
        "primary": {
          "background": "#FFFFFF",
          "text": "#000000",
          "fontSize": "16px",
          "fontWeight": 600,
          "padding": "16px 32px",
          "borderRadius": "8px",
          "border": "none",
          "boxShadow": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#F5F5F5",
            "transform": "translateY(-2px)",
            "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.1)"
          },
          "active": {
            "transform": "translateY(0)",
            "boxShadow": "none"
          },
          "context": "Primary CTA on dark backgrounds"
        },
        "secondary": {
          "background": "transparent",
          "text": "#FFFFFF",
          "fontSize": "16px",
          "fontWeight": 600,
          "padding": "16px 32px",
          "borderRadius": "8px",
          "border": "2px solid #FFFFFF",
          "boxShadow": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#FFFFFF",
            "text": "#000000"
          },
          "context": "Secondary CTA on dark backgrounds"
        },
        "ghost": {
          "background": "transparent",
          "text": "#000000",
          "fontSize": "16px",
          "fontWeight": 600,
          "padding": "16px 32px",
          "borderRadius": "8px",
          "border": "2px solid #000000",
          "boxShadow": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#000000",
            "text": "#FFFFFF"
          },
          "context": "Tertiary actions on light backgrounds"
        }
      },

      "cards": {
        "featureCard": {
          "background": "#FFFFFF",
          "border": "none",
          "borderRadius": "0px",
          "padding": "48px",
          "boxShadow": "none",
          "transition": "none",
          "hover": {
            "transform": "none",
            "boxShadow": "none"
          },
          "icon": {
            "containerSize": "80px",
            "containerBackground": "transparent",
            "containerBorder": "none",
            "iconSize": "48px",
            "iconColor": "#000000",
            "marginBottom": "24px"
          },
          "title": {
            "fontSize": "24px",
            "fontWeight": 700,
            "color": "#000000",
            "marginBottom": "16px"
          },
          "description": {
            "fontSize": "16px",
            "fontWeight": 400,
            "color": "#666666",
            "lineHeight": 1.6
          },
          "context": "Feature explanation cards in process section"
        },
        
        "serviceCard": {
          "background": "#F5F5F5",
          "border": "none",
          "borderRadius": "12px",
          "padding": "32px",
          "boxShadow": "none",
          "minHeight": "280px",
          "iconContainer": {
            "size": "100px",
            "background": "varies by card",
            "borderRadius": "12px",
            "marginBottom": "24px",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "center",
            "geometricShape": {
              "type": "varies (square, circle, triangle)",
              "color": "#000000",
              "size": "40-50px"
            }
          },
          "items": {
            "background": "#FFFFFF",
            "padding": "12px 20px",
            "borderRadius": "24px",
            "border": "1px solid #E8E8E8",
            "fontSize": "16px",
            "fontWeight": 500,
            "color": "#000000",
            "marginBottom": "12px",
            "display": "flex",
            "alignItems": "center",
            "gap": "8px",
            "icon": {
              "display": "inline-block",
              "content": "'+' symbol",
              "marginRight": "8px"
            }
          },
          "variants": {
            "blue": {
              "iconBackground": "#60A5FA"
            },
            "mint": {
              "iconBackground": "#A8E6CF"
            },
            "pink": {
              "iconBackground": "#FFC0CB"
            },
            "yellow": {
              "iconBackground": "#EAB308"
            }
          },
          "context": "Service type showcase cards"
        }
      },

      "decorativeElements": {
        "geometricShapes": {
          "pentagon": {
            "stroke": "#3B82F6",
            "fill": "none",
            "strokeWidth": "3px",
            "size": "120-180px",
            "rotation": "15deg",
            "context": "Floating decoration on hero section"
          },
          "triangle": {
            "stroke": "#A8E6CF",
            "fill": "none",
            "strokeWidth": "3px",
            "size": "120-180px",
            "rotation": "-10deg",
            "context": "Floating decoration on hero section"
          },
          "circle": {
            "stroke": "#EAB308",
            "fill": "none",
            "strokeWidth": "3px",
            "size": "120-160px",
            "context": "Floating decoration on hero section"
          },
          "square": {
            "stroke": "#FFFFFF",
            "fill": "none",
            "strokeWidth": "3px",
            "size": "140-180px",
            "rotation": "5deg",
            "context": "Floating decoration on hero section"
          }
        },
        "positioning": {
          "randomPlacement": true,
          "animation": "subtle float",
          "opacity": "0.6-1.0",
          "zIndex": "1 (behind content)"
        }
      },

      "navigation": {
        "header": {
          "background": "transparent",
          "position": "fixed",
          "top": 0,
          "padding": "24px 48px",
          "backdropFilter": "blur(10px) when scrolled",
          "logo": {
            "fontSize": "20px",
            "fontWeight": 700,
            "color": "#FFFFFF",
            "letterSpacing": "0.05em"
          },
          "links": {
            "fontSize": "16px",
            "fontWeight": 500,
            "color": "#FFFFFF",
            "padding": "8px 16px",
            "transition": "color 0.2s ease",
            "hover": {
              "color": "#CCCCCC"
            }
          }
        }
      },

      "sections": {
        "hero": {
          "background": "#000000",
          "minHeight": "100vh",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "padding": "0 48px",
          "position": "relative",
          "overflow": "hidden",
          "decorativeElements": "geometric shapes scattered throughout"
        },
        "lightSection": {
          "background": "#F5F5F5",
          "padding": "clamp(64px, 8vw, 128px) 48px"
        },
        "whiteSection": {
          "background": "#FFFFFF",
          "padding": "clamp(64px, 8vw, 128px) 48px"
        },
        "darkSection": {
          "background": "#000000",
          "padding": "clamp(64px, 8vw, 128px) 48px"
        }
      },

      "grid": {
        "featureGrid": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fit, minmax(300px, 1fr))",
          "gap": "0px",
          "maxWidth": "1200px",
          "margin": "0 auto"
        },
        "serviceGrid": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fit, minmax(280px, 1fr))",
          "gap": "24px",
          "maxWidth": "1200px",
          "margin": "48px auto 0"
        }
      },

      "icons": {
        "lineStyle": {
          "strokeWidth": "2px",
          "stroke": "#000000",
          "fill": "none",
          "size": "24px",
          "context": "UI icons in light sections"
        },
        "onDark": {
          "strokeWidth": "2px",
          "stroke": "#FFFFFF",
          "fill": "none",
          "size": "24px"
        }
      },

      "footer": {
        "background": "#000000",
        "padding": "64px 48px 32px",
        "logo": {
          "fontSize": "20px",
          "fontWeight": 700,
          "color": "#FFFFFF",
          "letterSpacing": "0.05em"
        },
        "sectionTitle": {
          "fontSize": "16px",
          "fontWeight": 600,
          "color": "#FFFFFF",
          "marginBottom": "16px"
        },
        "links": {
          "fontSize": "14px",
          "fontWeight": 400,
          "color": "#999999",
          "lineHeight": 2,
          "hover": {
            "color": "#FFFFFF"
          }
        },
        "divider": {
          "height": "1px",
          "background": "#333333",
          "margin": "48px 0 24px"
        }
      }
    },

    "designPrinciples": {
      "contrast": "High contrast between sections (black/white alternation)",
      "whitespace": "Generous spacing between elements",
      "typography": "Bold, oversized headlines with clean sans-serif",
      "minimalism": "Minimal decorative elements, focus on content",
      "geometry": "Subtle geometric shapes as floating decorations",
      "interactions": "Subtle, functional animations",
      "colorUsage": "Monochrome base with selective accent colors"
    },

    "stylingRules": {
      "DO": [
        "Use pure black (#000000) and pure white (#FFFFFF) for primary backgrounds",
        "Apply geometric shape outlines as decorative elements, never filled",
        "Use bold font weights (700-800) for all headlines",
        "Maintain high contrast between text and backgrounds",
        "Apply subtle hover transitions (0.2s ease)",
        "Use consistent border-radius (8-12px) for interactive elements",
        "Keep icon designs minimal and line-based",
        "Apply accent colors sparingly to icon containers or badges only",
        "Use padding generously for breathing room",
        "Alternate section backgrounds between black, white, and light gray"
      ],
      "DO_NOT": [
        "Apply gradients to any elements - this design uses solid colors only",
        "Fill geometric shapes with color - they should be outline/stroke only",
        "Use box shadows on cards in light sections",
        "Apply border radius to feature cards - they should be square",
        "Use colored backgrounds on text elements",
        "Apply decorative elements to card contents - they belong in hero section only",
        "Use multiple accent colors in the same component",
        "Add excessive animations or transitions",
        "Use thin font weights for headlines",
        "Create visual clutter with overlapping elements"
      ]
    },

    "responsiveBehavior": {
      "breakpoints": {
        "mobile": "320px-768px",
        "tablet": "769px-1024px",
        "desktop": "1025px+"
      },
      "mobileAdjustments": {
        "heroText": "Scale down to 48-56px",
        "sectionPadding": "Reduce to 64px",
        "gridColumns": "Single column stacking",
        "cardPadding": "Reduce to 24px",
        "navigationPadding": "Reduce to 16px 24px"
      }
    },

    "accessibility": {
      "colorContrast": {
        "textOnWhite": "WCAG AAA compliant (#000000 on #FFFFFF)",
        "textOnBlack": "WCAG AAA compliant (#FFFFFF on #000000)",
        "minimumRatio": "7:1 for normal text, 4.5:1 for large text"
      },
      "interactiveElements": {
        "minimumTapTarget": "44x44px",
        "focusIndicator": "2px solid outline with 2px offset",
        "hoverStates": "Always provide visible hover feedback"
      }
    }
  }
}